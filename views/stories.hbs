<h1 class="heading ">How JUMO affected people's lives</h1>

<div class="row">
  <div class="columns">

  </div>
</div>

<div class="row shadow">

    <h2>Stories</h2>
  {{#each stories}}

    <div class="small-2 columns">
      <p>
        Like(s){{likeCount}}
        <a data-open="storyModal{{id}}">
          <img class="thumbnail" src="img/{{photoName}}.jpg" alt="Trolltunga Norway" ></a>
          {{heading}}

        </p>

      <div class="reveal" id="storyModal{{id}}" data-reveal>
      <p class = "picture"><img class="imgGrad" src="img/{{photoName}}.jpg" alt="Trolltunga Norway"></p>
        <h1>{{heading}}</h1>
        <p>{{content}}</p>
        <a href="likeOrUnlike/{{id}}">Like</a>

        <button class="close-button" data-close aria-label="Close reveal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

  </div>
  {{/each}}
</div>
